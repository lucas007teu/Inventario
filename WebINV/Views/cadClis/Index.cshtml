@model IEnumerable<WebINV.Models.cadCli>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idInventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idInventario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idCli" class="btn btn-blue">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idCli" class="btn btn-blue">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.idCli" class="btn btn-blue">Deletar</a>
                </td>

            </tr>
        }
    </tbody>
</table>
