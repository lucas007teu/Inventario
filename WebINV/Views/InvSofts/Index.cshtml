@model IEnumerable<WebINV.Models.InvSoft>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodSoft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soft)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodSoft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soft)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idSoft" class="btn btn-blue">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idSoft" class="btn btn-blue">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.idSoft" class="btn btn-blue">Deletar</a>
                </td>
        </tr>
}
    </tbody>
</table>
